{
  "name": "payment-api-demo",
  "version": "1.0.0",
  "description": "A simple payment API demo that integrates 3rd party payment providers eg Flutterwave, Paystack etc",
  "main": ".eslintrc.js",
  "scripts": {
    "dev": "NODE_ENV=development DEBUG=payment-api-demo:* nodemon --exec babel-node -- src/server.ts --extensions '.ts,.tsx'",
    "release": "npm run clean && npm run build-app && npm run start",
    "clean": "rm -rf dist && mkdir dist",
    "build": "npm run clean && npm run build-app",
    "build-app": "babel src -s -d dist --extensions '.ts,.tsx'",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/okezieobi/payment-api-demo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/okezieobi/payment-api-demo/issues"
  },
  "homepage": "https://github.com/okezieobi/payment-api-demo#readme",
  "dependencies": {
    "ajv": "^8.10.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "ajv-keywords": "^5.1.0",
    "bcrypt": "^5.0.1",
    "cors": "latest",
    "debug": "latest",
    "dotenv": "latest",
    "express": "latest",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.0",
    "mongoose-paginate-v2": "^1.6.1",
    "morgan": "latest",
    "node-fetch": "^3.2.0",
    "swagger-jsdoc": "latest",
    "swagger-ui-express": "latest",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/node": "latest",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "latest",
    "@babel/register": "latest",
    "@tsconfig/recommended": "latest",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "latest",
    "@types/cors": "latest",
    "@types/debug": "latest",
    "@types/express": "latest",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "latest",
    "@types/node": "latest",
    "@types/swagger-jsdoc": "latest",
    "@types/swagger-ui-express": "latest",
    "@types/validator": "^13.7.1",
